# ============================================
# HookClip VPS Production Configuration
# ============================================

# Server
PORT=3001
FRONTEND_URL=https://your-domain.com

# Redis (Docker network)
REDIS_HOST=redis
REDIS_PORT=6379

# YouTube OAuth (optional - for upload feature)
# Get from Google Cloud Console: https://console.cloud.google.com
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=
YOUTUBE_REDIRECT_URI=https://your-domain.com/api/oauth/callback
YOUTUBE_REFRESH_TOKENS=

# LLM Configuration (optional - for smart detection)
LLM_PROVIDER=openai
LLM_API_KEY=
LLM_MODEL=gpt-4o-mini

# Processing Settings
DEFAULT_CLIP_COUNT=3
DEFAULT_CLIP_DURATION=40
UPLOAD_DELAY_MS=5000
WORKER_CONCURRENCY=2

# Admin Panel
ADMIN_PASSWORD=change_this_password

# Paths (Docker volumes)
DOWNLOAD_DIR=/app/downloads
OUTPUT_DIR=/app/output
LOG_DIR=/app/logs

# Aria2c Downloader
ARIA2C_ENABLED=true
ARIA2C_CONNECTIONS=16
ARIA2C_SPLIT_SIZE=1M

# Whisper (for transcription)
WHISPER_MODEL=small
WHISPER_DEVICE=cpu
PYTHON_PATH=python3

# Debug
DEBUG=false
